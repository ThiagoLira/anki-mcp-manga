# Telegram bot token (from @BotFather)
TELEGRAM_BOT_TOKEN=your-bot-token-here

# Comma-separated Telegram user IDs allowed to use the bot (empty = allow all)
ALLOWED_TELEGRAM_USER_IDS=

# OpenRouter API key
OPENROUTER_API_KEY=your-openrouter-key-here

# LLM model (default: anthropic/claude-sonnet-4)
OPENROUTER_MODEL=anthropic/claude-sonnet-4

# Anki sync server credentials
SYNC_USER=user
SYNC_PASSWORD=password
SYNC_ENDPOINT=http://anki-sync:8080

# Anki collection path (inside container)
COLLECTION_PATH=/data/collection.anki2

# Deck names
KANJI_DECK=Japones KANJI
MANGA_DECK=Japones Vocab Mangas

# Sync server config (for anki-sync container)
SYNC_USER1=user:password

# Deployment / networking (not used by containers, for reference and docker-compose)
DEPLOY_HOST=your-server-ip
TAILSCALE_HOSTNAME=your-machine.your-tailnet.ts.net
SYNC_BIND_IP=0.0.0.0
